<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<record id="wizard_send_faturamento_form" model="ir.ui.view">
		    <field name="name">wizard.send.faturamento.form</field>
		    <field name="model">send.faturamento</field>
		    <field name="arch" type="xml">
		        <form string="Envio do Faturamento" version="7.0">
		            <field name="state" invisible="1"/>
		            <group states="init">
		            	<field name='cc'/>
		            	<field name='test'/>
		            </group>
		            <group states="done">
		            	<field name="progress_rate" widget="progressbar"/>
		            </group>
		            <footer>
		                <group states="init">
		                    <button type="object" name="action_send" string="Enviar"/>
		                </group>
		            </footer>
		        </form>
		    </field>
		</record>
		
		<record id="action_send_faturamento" model="ir.actions.act_window">
		    <field name="name">Envio Faturamento</field>
		    <field name="res_model">send.faturamento</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">form</field>
		    <field name="target">new</field>
		</record>
		
		<act_window id="actwindow_send_faturamento" key2="client_action_multi"
		    name="Envio Faturamento" res_model="send.faturamento"
		    src_model="account.invoice" view_id="action_send_faturamento"
		    view_mode="form" target="new" view_type="form"/>
		    
	</data>
    
</openerp>
